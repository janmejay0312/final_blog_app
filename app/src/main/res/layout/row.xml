<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/common_google_signin_btn_icon_dark"

    android:tag="cards main container">

    <androidx.cardview.widget.CardView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:padding="15dp"
        app:cardBackgroundColor="@color/White"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="330dp"

            android:orientation="vertical"
            android:weightSum="15">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@drawable/text"
                android:ellipsize="end"
                android:fitsSystemWindows="true"
                android:maxLines="2"
                android:text="@string/post_title"
                android:textAlignment="viewStart"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Title"
                android:textSize="20sp"
                android:textStyle="normal"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/text"
                android:ellipsize="end"
                android:fitsSystemWindows="true"
                android:maxLines="2"
                android:text="@string/post_description"
                android:textAlignment="textStart"
                android:textColor="@color/common_google_signin_btn_text_light_focused"
                android:textSize="15sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/upvote"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/like"
                    android:text="upvote" />

                <TextView
                    android:id="@+id/no_of_like"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/downvote"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/dislike"
                    android:text="downvote" />

                <TextView
                    android:id="@+id/no_of_dislike"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fitsSystemWindows="true"
                    android:text="time"
                    android:textAlignment="viewStart"
                    android:textColor="@color/Black"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>